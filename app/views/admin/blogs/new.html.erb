<div class="container">
	<h1>Formulario</h1>
	<%= form_fo @blog, html: { multipart: true } do |f| %>
	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div>
		<%= f.label :imagen %>
		<%= f.file_field :imagen%>
	</div>
	<div>
		<%= f.label :description %>
		<%= f.text_field :description%>
	</div>
	<%= f.submit %>
   <% end %>
</div>
