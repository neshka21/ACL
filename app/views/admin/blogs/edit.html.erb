<section class="blogs">
  <div class="container">
    <h1>Nuevo Libro</h1>
    <hr><br>
      <%= form_for @blog, url:admin_blog_path do |f|%>
       <div><br>
        <%= f.label :title %>
        <%= f.text_field :title, class:"form-control"  %>
      </div><br>
       <div>
      <%= f.label :img %>
      <%= f.file_field :img, class:"form-control-file"%>
     </div><br>
      <div>
       <%= f.label :description %>
       <%= f.text_area :description,class:"form-control"%>
      </div><br>
     <div>
      <%= f.submit class:"btn btn-outline-primary" %>
    </div>
    <br>
    <% end %>
     <%= link_to "Back", admin_blogs_path%>
  </div>
</section>